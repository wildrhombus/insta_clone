<% if @post.errors.any? %>
    <section id="errors" >
      <h2> <%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved: </h2>
      <ul>
        <% @post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
      </ul>
    </section>
<% end %>
<%= form_for @post do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>
    <%= f.submit %>
<% end %>